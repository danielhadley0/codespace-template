# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/arbitrage_db

# Kalshi API
KALSHI_API_KEY=your_kalshi_api_key
KALSHI_API_SECRET=your_kalshi_api_secret
KALSHI_BASE_URL=https://api.elections.kalshi.com/trade-api/v2

# Polymarket API
POLYMARKET_API_KEY=your_polymarket_api_key
POLYMARKET_PRIVATE_KEY=your_polymarket_private_key
POLYMARKET_BASE_URL=https://clob.polymarket.com

# Discord Bot
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_CHANNEL_ID=your_channel_id

# Redis (optional)
REDIS_URL=redis://localhost:6379/0

# Trading Parameters
PAPER_TRADING_MODE=true  # Start in paper trading mode (safe default)
MIN_ARBITRAGE_THRESHOLD=0.01  # 1% minimum profit
MAX_TRADE_SIZE=1000  # USD
MAX_POSITION_PER_MARKET=5000  # USD
SLIPPAGE_TOLERANCE=0.02  # 2%
ORDER_TIMEOUT_SECONDS=30
COOLDOWN_BETWEEN_TRADES=5  # seconds

# Paper Trading Parameters (only used when PAPER_TRADING_MODE=true)
PAPER_SIMULATED_SLIPPAGE=0.005  # 0.5% simulated slippage
PAPER_PARTIAL_FILL_CHANCE=0.1  # 10% chance of partial fills
PAPER_STARTING_BALANCE=10000  # Starting balance in USD

# Monitoring
PRICE_FETCH_INTERVAL=5  # seconds
MAX_RETRY_ATTEMPTS=3
RETRY_BACKOFF_BASE=2  # seconds

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/arbitrage.log
